<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/widget_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:contentDescription="@null" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageButton
                style="@style/ImageButtonSmallStyle"
                android:id="@+id/app_icon"
                android:src="@mipmap/ic_launcher"
                android:background="@android:color/transparent" />

            <TextView
                android:id="@+id/widget_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:minLines="1"
                android:maxLines="2"
                android:textAllCaps="true"
                android:textSize="18sp"
                android:background="@android:color/transparent" />

            <ImageButton
                style="@style/ImageButtonSmallStyle"
                android:id="@+id/btn_volume_off"
                android:src="@drawable/cmd_volume_off" />

            <ImageButton
                style="@style/ImageButtonSmallStyle"
                android:id="@+id/btn_volume_down"
                android:src="@drawable/cmd_volume_down"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="8dp" />

            <ImageButton
                style="@style/ImageButtonSmallStyle"
                android:id="@+id/btn_volume_up"
                android:src="@drawable/cmd_volume_up" />
        </LinearLayout>

        <ImageView
            android:id="@+id/widget_divider"
            android:layout_width="match_parent"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:layout_height="1dp"
            android:src="@color/widget_b_text" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center">

            <ImageButton
                style="@style/ImageButtonPrimaryStyle"
                android:id="@+id/btn_power"
                android:src="@drawable/cmd_power" />

            <ImageButton
                style="@style/ImageButtonPrimaryStyle"
                android:id="@+id/btn_previous"
                android:src="@drawable/cmd_previous" />

            <ImageButton
                style="@style/ImageButtonPrimaryStyle"
                android:id="@+id/btn_stop"
                android:src="@drawable/cmd_stop" />

            <ImageButton
                style="@style/ImageButtonPrimaryStyle"
                android:id="@+id/btn_play"
                android:src="@drawable/cmd_play" />

            <ImageButton
                style="@style/ImageButtonPrimaryStyle"
                android:id="@+id/btn_next"
                android:src="@drawable/cmd_next" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>