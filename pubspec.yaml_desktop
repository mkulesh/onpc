  # the material Icons class.
  uses-material-design: true

  # To add assets to your application, add an assets section, like this:
  assets:
    - lib/assets/
    - lib/assets/buttons/
    - lib/assets/ri/
    - lib/assets/fonts/

msix_config:
  build_windows: false
  display_name: Enhanced Music Controller
  publisher_display_name: Mikhail Kulesh
  identity_name: 25529MikhailKulesh.EnhancedMusicController
  publisher: CN=9D09E66E-B667-4A38-BC96-E7825A87B8DB
  msix_version: 2.15.1.0
  logo_path: windows\runner\resources\app_icon_512.png
  start_menu_icon_path: windows\runner\resources\app_icon_512.png
  tile_icon_path: windows\runner\resources\app_icon_512.png
  icons_background_color: '#0077dd'
  architecture: x64
  capabilities: 'internetClient'
  dont_install_cert: true
  signtool_options: /td sha256